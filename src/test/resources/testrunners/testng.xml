<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Test Suite" parallel="tests">

    <listeners>
        <listener class-name="com.saucedemo.playwright.listeners.ExtentReportListener"/>
    </listeners>

    <test verbose="4" name="Login Page Validation">
        <classes>
            <class name="com.saucedemo.playwright.tests.LoginTest"/>
        </classes>
    </test>

    <test verbose="4" name="Inventory Page Validation">
        <classes>
            <class name="com.saucedemo.playwright.tests.InventoryTest"/>
        </classes>
    </test>

    <test verbose="4" name="ItemDetail Page Validation">
        <classes>
            <class name="com.saucedemo.playwright.tests.ItemDetailTest"/>
        </classes>
    </test>

    <test verbose="4" name="Cart Page Validation">
        <classes>
            <class name="com.saucedemo.playwright.tests.CartTest"/>
        </classes>
    </test>

    <test verbose="4" name="Checkout Step One Page Validation">
        <classes>
            <class name="com.saucedemo.playwright.tests.CheckoutStepOneTest"/>
        </classes>
    </test>

    <test verbose="4" name="Checkout Step Two Page Validation">
        <classes>
            <class name="com.saucedemo.playwright.tests.CheckoutStepTwoTest"/>
        </classes>
    </test>

    <test verbose="4" name="Checkout Complete Page Validation">
        <classes>
            <class name="com.saucedemo.playwright.tests.CheckoutCompleteTest"/>
        </classes>
    </test>

    <test verbose="4" name="Header Component Validation">
        <classes>
            <class name="com.saucedemo.playwright.tests.HeaderComponentTest"/>
        </classes>
    </test>

    <test verbose="4" name="Footer Component Validation">
        <classes>
            <class name="com.saucedemo.playwright.tests.FooterComponentTest"/>
        </classes>
    </test>

</suite>